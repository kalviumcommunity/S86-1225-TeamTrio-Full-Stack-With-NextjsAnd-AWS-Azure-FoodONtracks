            <div className="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition-transform">
              <div className="text-sm opacity-90 mb-1">Today's Deliveries</div>
              <div className="text-3xl font-bold">{stats.todayDeliveries}</div>
              <div className="text-xs opacity-75 mt-1">Total orders</div>
            </div>
            
            <div className="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition-transform">
              <div className="text-sm opacity-90 mb-1">Pending Pickups</div>
              <div className="text-3xl font-bold">{stats.pendingPickups}</div>

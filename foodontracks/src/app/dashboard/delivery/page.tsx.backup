        if (myOrdersRes.ok) {
          const myOrdersData = await myOrdersRes.json();
          setMyOrders(myOrdersData.orders || []);
        }

        setView('MY_ORDERS');
      } else {
        const error = await res.json();
        toast.error(error.message || 'Failed to assign order');
